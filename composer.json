{
    "name": "mewtonium/vanguard",
    "description": "A simple validation library using PHP attributes.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Mewtonium\\Vanguard\\": "src/"
        },
        "files": [
            "utils/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Mewtonium\\Vanguard\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Mark Wilkinson",
            "email": "56736714+mewtonium@users.noreply.github.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "symfony/var-dumper": "^7.2",
        "pestphp/pest": "^3.7",
        "laravel/pint": "^1.21"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    }
}
